<p class="login-box-msg">註冊</p>
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.input :nickname, wrapper: :bootstrap, autocomplete: "off", placeholder: "姓名", autofocus: true, icon: "fa-envelope" %>
  <%= f.input :email, wrapper: :bootstrap, autocomplete: "off", placeholder: "電子郵件", icon: "fa-envelope" %>

  <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
  <% end %><br />
  <%= f.input :password, wrapper: :bootstrap, autocomplete: "off", placeholder: "密碼", icon: "fa-eye-slash" %>
  <%= f.input :password_confirmation, wrapper: :bootstrap, autocomplete: "off", placeholder: "密碼", icon: "fa-eye-slash" %>

  <div class="actions">
    <%= f.submit "註冊", class: "btn btn-primary btn-block btn-flat" %>
  </div>
<% end %>

<%= render "admin/supervisors/shared/links" %>
