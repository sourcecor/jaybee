<%= stylesheet_link_tag 'css/member' %>
<article class="bread">
  <span class="memberBar"><%= image_tag "member/member.png"%>會員中心</span>
  <a href="/">首頁</a> > <a href="/users">會員中心</a> > <a href="javascript:;">會員註冊</a>

</article>

<article class="memberInfo">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <span>
      <p>姓名</p>
      <%= f.text_field :nickname, placeholder: "請輸入您的姓名" %>
      <p>電子郵件</p>
      <%= f.email_field :email, autofocus: true, placeholder: "請輸入您的電子郵件" %>
    </span>
    <span>
      <p>密碼</p>
      <% if @minimum_password_length %>
      <em>(最少<%= @minimum_password_length %>位)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", placeholder: "請輸入密碼"  %>

      <p>密碼確認</p>
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder:"請再次輸入密碼" %>
    </span>
    <div class="center">
      <button>送出</button>
      <a class="facebook"><i class="fab fab-facebook-alt bt-lg"></i><span class="en">facebook</span>登入</a>
      <a class="google"><i class="fab fab-google-alt bt-lg"></i><span class="en">google</span>登入</a>
    </div>
  <% end %>
</article>